.playlist-container {
  width: 220rpx;
  position: relative;
  padding-bottom: 20rpx;
}

.playlist-img {
  width: 100%;
  height: 220rpx;
  border-radius: 6rpx;
}

.playlist-count {
  font-size: 24rpx;
  color: #fff;
  text-shadow: 1px 0 (0, 0, 0, 0.5);
  position: absolute;
  right: 10rpx;
  top: 4rpx;
  padding-left: 26rpx;
  background-size: 20rpx 100%;
  background-position: left center;
  background-repeat: no-repeat;
  background-image: url(data:image/svg+xml;base64,);
}

.playlist-name {
  font-size: 26rpx;
  line-height: 1.2;
  padding: 2px 0 0 6px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}